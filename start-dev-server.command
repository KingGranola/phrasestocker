#!/bin/bash

# PhraseStocker 開発サーバー起動スクリプト
# このファイルをダブルクリックするとアプリが起動します

# スクリプトのディレクトリに移動
cd "$(dirname "$0")"

echo "========================================="
echo "  PhraseStocker 開発サーバー起動中...  "
echo "========================================="
echo ""

# 依存関係のチェックとインストール
if [ ! -d "node_modules" ]; then
    echo "📦 初回起動: 依存関係をインストールしています..."
    echo "（数分かかる場合があります）"
    npm install
    echo ""
fi

echo "✅ 準備完了！"
echo ""
echo "🚀 開発サーバーを起動しています..."
echo ""
echo "ブラウザが自動的に開きます。"
echo "開かない場合は、以下のURLにアクセスしてください:"
echo "👉 http://localhost:5173"
echo ""
echo "⚠️  サーバーを停止するには、このウィンドウを閉じるか"
echo "   Ctrl+C を押してください。"
echo ""
echo "========================================="
echo ""

# 開発サーバー起動
npm run dev

# 終了時のメッセージ
echo ""
echo "========================================="
echo "  サーバーが停止しました"
echo "========================================="
echo ""
read -p "Enterキーを押して終了..."
